<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- parking_portal.price.hour -->
        <record id="view_parking_portal_price_hour_form" model="ir.ui.view">
            <field name="name">parking.portal.price.hour.form</field>
            <field name="model">price.hour</field>
            <field name="arch" type="xml">
                <form string="Price hour">
                  <sheet>
                    <group col="4">
                        <field name="minutes"/>
                        <field name="price"/>
                        <field name="price_schedule_detail" />
                    </group>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="view_parking_portal_price_hour_tree" model="ir.ui.view">
            <field name="name">parking.portal.price.hour.tree</field>
            <field name="model">price.hour</field>
            <field name="view_mode">tree,form</field>
            <field name="arch" type="xml">
                <tree string="Price hour" editable="bottom">
                    <field name="minutes"/>
                    <field name="price"/>
                </tree>
            </field>
        </record>

