<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- parking_portal.zone -->
        <record id="view_parking_portal_zone_form" model="ir.ui.view">
            <field name="name">parking.portal.zone.form</field>
            <field name="model">zone</field>
            <field name="arch" type="xml">
                <form string="Zone">
                  <sheet>
                    <group col="4">
                        <field name="name"/>
                        <field name="district"/>
                        <field name="price_schedule"/>
                        <field name="reference"/>
                    </group>
                  </sheet>
                </form>
            </field>
        </record>

        <record id="view_parking_portal_zone_tree" model="ir.ui.view">
            <field name="name">parking.portal.zone.tree</field>
            <field name="model">zone</field>
            <field name="view_mode">tree,form</field>
            <field name="arch" type="xml">
                <tree string="Zone">
                        <field name="name"/>
                        <field name="reference"/>
                </tree>
            </field>
        </record>

        <record id="action_parking_portal_zone_form" model="ir.actions.act_window">
            <field name="name">Zone</field>
            <field name="res_model">zone</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_parking_portal_zone_form"
                  id="menu_action_parking_portal_zone_form"
                  parent="menu_parking_portal_configuration"
                  sequence="1"
                  groups="group_parking_admin"/>

    </data>
</odoo>